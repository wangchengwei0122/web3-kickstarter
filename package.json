{
  "name": "web3-Kickstarter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:anvil": "anvil -p 8545",
    "dev:edge": "pnpm --filter @apps/edge dev",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev": "concurrently -k -n anvil,edge,web \"pnpm dev:anvil\" \"pnpm dev:edge\" \"pnpm dev:web\"",
    "contracts:build": "pnpm --filter @packages/contracts exec forge build",
    "contracts:deploy:local:auto": "bash scripts/deploy_all.sh",
    "deploy:edge": "pnpm --filter @apps/edge run deploy",
    "edge:kv:create": "pnpm --filter @apps/edge kv:create",
    "edge:kv:create:preview": "pnpm --filter @apps/edge kv:create:preview",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json,sol}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
